<body class="dashboard">
  <h1>Dashboard#dashboard</h1>
  <p>Find me in app/views/dashboard/dashboard.html.erb</p>
  <div class="container-dash">
    <aside>
      <div class="top">
        <div class="logo-dash">
          <%= image_tag "T_logo.png", :class => "img_tag" %>
          <h2><span class="danger">T</span>rack</h2>
        </div>
        <div class="close" id="close-btn">
          <span><i class="material-icons sharp">close</i></span>
        </div>
      </div>

      <div class="sidebar">
        <a href="">
          <span><i class="material-icons sharp">grid_view</i></span>
          <h3>Dashboard</h3>
        </a>

        <a href="" class="active">
          <span><i class="material-icons sharp">person_outline</i></span>
          <h3>Customers</h3>
        </a>

        <a href="">
          <span><i class="material-icons sharp">receipt_long</i></span>
          <h3>Orders</h3>
        </a>

        <a href="">
          <span><i class="material-icons sharp">insights</i></span>
          <h3>Analytics</h3>
        </a>

        <a href="">
          <span><i class="material-icons sharp">mail_outline</i></span>
          <h3>Messages</h3>
          <span class="message-count">26</span>
        </a>

        <a href="">
          <span><i class="material-icons sharp">inventory</i></span>
          <h3>Products</h3>
        </a>

        <a href="">
          <span><i class="material-icons sharp">report</i></span>
          <h3>Reports</h3>
        </a>

        <a href="">
          <span><i class="material-icons sharp">settings</i></span>
          <h3>Setting</h3>
        </a>

          <a href="">
          <span><i class="material-icons sharp">add</i></span>
          <h3>Add Product</h3>
        </a>

        <a href="">
          <span><i class="material-icons sharp">logout</i></span>
          <h3>Logout</h3>
        </a>
      </div>
    </aside>
    <!-- End of aside -->
    <!-- Beginning main section-->
    <main>
      <h1>Dashboard</h1>
      <div class="date">
        <input type="date">
      </div>

      <div class="insights">
      <!-- Start Sales -->
        <div class="sales">
          <span><i class="material-icons sharp">analytics</i></span>
          <div class="middle">
            <div class="left">
              <h3>Value owned</h3>
              <h1>25$,024</h1>
            </div>
            <div class="progress-dash">
              <svg>
                <circle cx="38" cy="38" r="36"></circle>
              </svg>
              <div class="number">
                <p>81%</p>
              </div>
            </div>
          </div>
          <small class="text-muted">Last 24 Hours</small>
        </div>
        <!-- End of Sales -->

        <!-- Start Expenses-->
        <div class="expenses">
          <span><i class="material-icons sharp">bar_chart</i></span>
          <div class="middle">
            <div class="left">
              <h3>Total Revenue</h3>
              <h1>$10,864</h1>
            </div>
            <div class="progress-dash">
              <svg>
                <circle cx="38" cy="38" r="36"></circle>
              </svg>
              <div class="number">
                <p>81%</p>
              </div>
            </div>
          </div>
          <small class="text-muted">Last 24 Hours</small>
        </div>
  <!-- End Expenses-->

    <!-- Start Incomes-->
        <div class="income">
          <span><i class="material-icons sharp">stacked_line_chart</i></span>
          <div class="middle">
            <div class="left">
              <h3>P/L</h3>
              <h1>$10,864</h1>
            </div>
            <div class="progress-dash">
              <svg>
                <circle cx="38" cy="38" r="36"></circle>
              </svg>
              <div class="number">
                <p>44%</p>
              </div>
            </div>
          </div>
          <small class="text-muted">Last 24 Hours</small>
        </div>
  <!-- End of Incomes-->

      </div>
    </main>
    <!-- End of main section -->

  </div>
</body>
